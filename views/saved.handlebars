<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand">Mongo Web Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02"
        aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor02">
        <div class="navbar-nav mr-auto">
            <a class="nav-item nav-link ml-4" href="/">Home <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link active ml-4" href="/saved">Saved Articles</a>
        </div>
    </div>
</nav>

<!-- Main display -->
<div class="container-fluid">
    <div class="jumbotron text-center">
        <div class="overlay"></div>
        <div class="caption">
            <h1 class="display-3 mb-4">Saved Articles</h1>
            <h3 class="display-5">Your Articles</h3>
        </div>
    </div>

    <!-- Saved articles -->
    <div class="row">
        <div class="col-12">
            {{#each articles}}
            <div class="card w-90">
                <div class="card-header">
                    <a href={{link}} target="_blank">
                        <h3>{{title}}</h3>
                    </a>
                </div>
                <div class="card-body">
                    <p class="card-text">{{summary}}</p>
                    <button data="{{_id}}" class="btn btn-info note-btn">Article Notes</button>
                    <button data="{{_id}}" class="btn btn-danger delete-btn">Delete from Saved</button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="note-modal" tabindex="-1" role="dialog" aria-labelledby="successMessage" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Notes for Article <span id="article-id"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <ul class="list-group list-group-flush articles-available">
                    </ul>
                </div>
                <br />
                <div class="form-group">
                    <label for="note-input" class="sr-only">Enter Note Here</label>
                    <textarea class="form-control" id="note-input" rows="3" placeholder="New Note"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="save-note">Save Note</button>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="footer bg-success mt-auto text-center py-3">
    <div class="container">
        <span>Mongo Web Scraper</span>
    </div>
</footer>